-# <head>
%title Ripstagram
= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
= javascript_include_tag 'application', 'data-turbolinks-track' => true
= csrf_meta_tags
-# </head>

%body

  %nav.navbar.navbar-default
    .navbar-container
      .navbar-header
        %button.navbar-toggle.collapsed{"data-target" => "#bs-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
          %span.sr-only Toggle Navigation
          %span.icon-bar
          %span.icon-bar
        .navbar-brand
          = link_to "Ripstagram", root_path
      .collapse.navbar-collapse#bs-navbar-collapse-1
        %ul#right-links.nav.navbar-nav.navbar-right
          %li
            = link_to "New Post", new_post_path
          %li
            = link_to "Login", '#'
          %li
            = link_to "Register", '#'
  .main-content
    = yield